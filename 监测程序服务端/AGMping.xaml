<UserControl x:Class="监测程序服务端.AGMping"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:监测程序服务端"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" BorderBrush="DarkGray" BorderThickness="1">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Name="lblname" Content="AGM001" FontSize="10"  Foreground="Goldenrod"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblTemp" Content="00.0" Style="{StaticResource AGMpingOfflineLabelStyle}"></Label>
                <Label x:Name="lblssd" Content="℃" Style="{StaticResource AGMpingOfflineLabelStyle}"></Label>
                <Label x:Name="lblHumi" Content="00.0" Style="{StaticResource AGMpingOfflineLabelStyle}"></Label>
                <Label x:Name="lblbfh" Content="％" Style="{StaticResource AGMpingOfflineLabelStyle}"></Label>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
